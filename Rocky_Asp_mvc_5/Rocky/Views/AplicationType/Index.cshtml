@model IEnumerable<Rocky_Model.AplicationType>
<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Aplication Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="AplicationType" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-circle-plus"></i> &nbsp;
                Create New Aplication Type
            </a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped table-hover" style="width:100%">

            <thead class="thead-dark " align="center">
                <tr>
                    <th colspan="2"> Name </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>

                        <td width=20% class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="AplicationType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="AplicationType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No AplicationType exist!!</p>
    }

</div>

