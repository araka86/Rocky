@model Rocky_Model.Category
<form method="post" asp-action="Create">
    <div class="border p-3 bg-white">
        <div class=form-group p-3>
            <h2 class="text-info pl-3">Add Category</h2>
        </div>
        <div class="row" >
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8" >
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4" >
                        <label asp-for="DisplayOrder" ></label>
                    </div>
                    <div class="col-8" >
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">

                        <div class="col mt-1 " >
                            <input type="submit" class="btn btn-info w-100 rounded-pill" value="Create"/>
                        </div>
                        <div class="col mt-1" >
                              <a asp-controller="Category" asp-action="Index" class="btn btn-success  w-100 rounded-pill">
                                   <i class="fa-solid fa-rotate-left"></i>

                                  </a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-4">
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{ <partial name="_ValidationScriptsPartial"/>}
}
